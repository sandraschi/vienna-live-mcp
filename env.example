# Vienna Live MCP Server Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL connection URL (shared with Vienna Life Assistant web app)
DATABASE_URL=postgresql://username:password@localhost:5432/vienna_life_assistant

# Database connection pool settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

# Wiener Linien (Vienna Public Transport)
WIENER_LINIEN_API_KEY=your_wiener_linien_api_key_here
WIENER_LINIEN_BASE_URL=https://www.wienerlinien.at/ogd_realtime

# Weather API (for travel planning)
OPENWEATHER_API_KEY=your_openweather_api_key_here
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5

# Currency Exchange API
CURRENCY_API_KEY=your_currency_api_key_here
CURRENCY_BASE_URL=https://api.exchangerate-api.com/v4

# Ã–BB (Austrian Federal Railways)
OEBB_API_KEY=your_oebb_api_key_here
OEBB_BASE_URL=https://api.oebb.at

# =============================================================================
# MEDIA SERVICE CONFIGURATION
# =============================================================================

# Plex Media Server
PLEX_SERVER_URL=http://plex.local:32400
PLEX_TOKEN=your_plex_token_here

# Calibre E-book Server
CALIBRE_URL=http://calibre.local:8080
CALIBRE_USERNAME=your_calibre_username
CALIBRE_PASSWORD=your_calibre_password

# Immich Photo Management
IMMICH_URL=http://immich.local:2283
IMMICH_API_KEY=your_immich_api_key_here

# =============================================================================
# CACHE AND BACKGROUND PROCESSING
# =============================================================================

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

LOG_LEVEL=INFO
DEBUG=false

# HTTP Server Settings
HTTP_HOST=0.0.0.0
HTTP_PORT=8000

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:7333

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Mock Data (set to false in production)
USE_MOCK_DATA=true

# Test Database
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/vienna_life_test
